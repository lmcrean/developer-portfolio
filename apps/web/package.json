{
  "name": "docusaurus",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:watch": "jest --config jest.config.js --watch",
    "test:buttons": "jest --config jest.config.js src/tests/button",
    "deploy:prod": "npx vercel --prod",
    "test:prod:images": "playwright test tests-e2e/images.spec.ts --config=playwright.prod.config.ts --headed",
    "test:prod:typefaces": "playwright test tests-e2e/typefaces.prod.spec.ts --config=playwright.prod.config.ts",
    "test:prod:typefaces:headed": "playwright test tests-e2e/typefaces.prod.spec.ts --config=playwright.prod.config.ts --headed",
    "test:prod:font-check": "playwright test tests-e2e/font-check.spec.ts --config=playwright.prod.config.ts",
    "deploy-and-test-images": "npm run deploy:prod && npm run test:prod:images",
    "deploy-and-test-typefaces": "npm run deploy:prod && npm run test:prod:typefaces",
    "deploy-and-test-all": "npm run deploy:prod && npm run test:prod:images && npm run test:prod:typefaces",
    "optimize:images": "imagemin static/screenshots/*.{png,jpg,jpeg} --out-dir=static/screenshots/optimized --plugin=pngquant --plugin=optipng",
    "convert:webp": "imagemin static/screenshots/*.{png,jpg,jpeg} --out-dir=static/screenshots/webp --plugin=webp",
    "analyze:bundle": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "performance:audit": "npm run build && npx lighthouse --output json --output html --chrome-flags='--headless' http://localhost:3000"
  },
  "dependencies": {
    "@docusaurus/core": "3.7.0",
    "@docusaurus/preset-classic": "3.7.0",
    "@mdx-js/react": "^3.0.0",
    "@splidejs/splide": "^4.1.4",
    "@tailwindcss/postcss": "^4.0.15",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@docusaurus/module-type-aliases": "3.7.0",
    "@docusaurus/tsconfig": "3.7.0",
    "@docusaurus/types": "3.7.0",
    "@playwright/test": "^1.51.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^8.0.0",
    "imagemin-webp": "^8.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-optipng": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.6",
    "sharp": "^0.33.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.6.2",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0"
  }
}
